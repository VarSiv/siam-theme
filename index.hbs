{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<div class="site-header-content outer">
</div>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
    <div class="container">
        {{!-- Featured (Most Recent) Post --}}
        {{#get "posts" limit="1" as |featured|}}
            {{#foreach featured}}
            <article class="featured-post">
                <a href="{{url}}" class="featured-post-link">
                {{#if feature_image}}
                <div class="featured-post-image">
                    <img src="{{img_url feature_image}}" alt="{{title}}">
                </div>
                {{/if}}
                <div class="featured-post-content">
                    <h1 class="featured-post-title">{{title}}</h1>
                    <time class="featured-post-date" datetime="{{date format="YYYY-MM-DD"}}">
                        {{date format="MMMM DD, YYYY"}}
                    </time>
                </div>
                </a>
            </article>
            {{/foreach}}
        {{/get}}
<div class="inner posts">

     {{!-- Economia Section --}}
        <section class="category-section">
            <h2>Economia</h2>
            <div class="post-grid">
                {{#get "posts" filter="tag:economia" limit="3" order="published_at DESC"}}
                    {{#foreach posts}}
                        {{> "post-card"}}
                    {{/foreach}}
                {{/get}}
            </div>
        </section>

        {{!-- Politica Section --}}
        <section class="category-section">
            <h2>Politica</h2>
            <div class="post-grid">
                {{#get "posts" filter="tag:politica" limit="3" order="published_at DESC"}}
                    {{#foreach posts}}
                        {{> "post-card"}}
                    {{/foreach}}
                {{/get}}
            </div>
        </section>

        {{!-- Sociedad Section --}}
        <section class="category-section">
            <h2>Sociedad</h2>
            <div class="post-grid">
                {{#get "posts" filter="tag:sociedad" limit="3" order="published_at DESC"}}
                    {{#foreach posts}}
                        {{> "post-card"}}
                    {{/foreach}}
                {{/get}}
            </div>
        </section>

    {{pagination}}

</div>
</main>
